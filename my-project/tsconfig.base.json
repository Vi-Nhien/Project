{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@my-project/login/data-access": ["libs/login/data-access/src/index.ts"],
      "@my-project/login/feature": ["libs/login/feature/src/index.ts"],
      "@my-project/notify/data-access/models": [
        "libs/notify/data-access/models/src/index.ts"
      ],
      "@my-project/notify/data-access/service": [
        "libs/notify/data-access/service/src/index.ts"
      ],
      "@my-project/notify/data-access/state": [
        "libs/notify/data-access/state/src/index.ts"
      ],
      "@my-project/notify/feature": ["libs/notify/feature/src/index.ts"],
      "@my-project/notify/ui": ["libs/notify/ui/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
